<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/value_4"
    android:paddingHorizontal="@dimen/value_8"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/value_8"
                android:layout_height="@dimen/value_56"
                android:background="?colorPrimary" />

            <FrameLayout
                android:layout_width="@dimen/value_56"
                android:layout_height="@dimen/value_56">

                <RelativeLayout
                    android:layout_width="@dimen/value_56"
                    android:layout_height="@dimen/value_56"
                    android:alpha="0.2"
                    android:background="?colorPrimary" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        style="@style/Theme.WifiAttendanceSystemAdmin.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="May"
                        android:textColor="?colorPrimary" />


                    <TextView
                        style="@style/Theme.WifiAttendanceSystemAdmin.Headline1.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/value_12"
                        android:text="@string/_24" />
                </RelativeLayout>
            </FrameLayout>

            <Space
                android:layout_width="@dimen/value_12"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/Theme.WifiAttendanceSystemAdmin.Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"

                    android:text="6:00am to 9:00pm" />

                <TextView
                    style="@style/Theme.WifiAttendanceSystemAdmin.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Wednesday - 6.5hr" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>