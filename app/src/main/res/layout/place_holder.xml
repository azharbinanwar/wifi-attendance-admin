<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/place_holder_icon"
            android:layout_width="@dimen/value_72"
            android:layout_height="@dimen/value_72"
            android:tint="?colorPrimary"
            app:srcCompat="@drawable/ic_people" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/value_12" />

        <TextView
            android:id="@+id/place_holder_title"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary" />

        <TextView
            android:id="@+id/place_holder_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>