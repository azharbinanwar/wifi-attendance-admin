<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WifiAttendanceSystemAdmin" parent="Theme.Material3.DayNight">
        <!-- app bar-->
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="elevationOverlayColor">@color/elevation_overlay_color</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="elevationOverlayAccentColor">@color/error_color</item>
        <item name="elevation">@dimen/zero</item>
        <item name="android:elevation">@dimen/zero</item>
        <!--status bar-->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>

        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!--material card-->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Button.Elevation</item>


    </style>

    <style name="Theme.WifiAttendanceSystemAdmin.Title.Bold" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/value_16</item>
    </style>

    <style name="Theme.WifiAttendanceSystemAdmin.Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/value_16</item>
    </style>

    <style name="Theme.WifiAttendanceSystemAdmin.Subtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/default_grey</item>

    </style>

    <style name="Theme.WifiAttendanceSystemAdmin.Headline1.Primary" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.WifiAttendanceSystemAdmin">
        <!-- app bar-->
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="elevationOverlayColor">@color/elevation_overlay_color</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="elevation">4dp</item>
        <item name="android:elevation">4dip</item>

    </style>

    <style name="AppTheme.AppbarBottom" parent="Theme.WifiAttendanceSystemAdmin">
        <item name="android:windowBackground">@color/bottom_nav_background</item>
    </style>


    <!--material card-->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="cardCornerRadius">@dimen/radius_8</item>
        <item name="cardElevation">@dimen/zero</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="colorSurface">@color/error_color</item>
        <item name="colorOnSurface">@color/error_color</item>
    </style>

    <!--buttons-->
    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Elevation" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/value_4</item>
        <item name="android:textAlignment">center</item>
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>

    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

    </style>

    <!--circular image-->
    <style name="ShapeableImageView.Circular" parent="">
        <item name="cornerSize">50%</item>
    </style>


    <style name="Widget.App.TextInputLayout.Outline" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnSurface">@color/color_primary</item>
        <item name="colorError">@color/error_color</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Progressbar.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="colorControlActivated">@color/color_on_primary</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/white</item>
        <item name="android:elevation">30dp</item>
        <item name="indicatorSize">30sp</item>
        <item name="trackColor">@android:color/transparent</item>
        <item name="trackThickness">@dimen/value_2</item>


    </style>
</resources>